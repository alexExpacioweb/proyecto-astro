---

import getResults from "../utils/peticion2";

const data = await getResults();

let posts = data.data.posts.nodes;

---

<section class="entradas-container">
    {posts.map((post:any) => {
        return <div class="entrada">
                    <img src={post.featuredImage.node.mediaItemUrl} alt="entrada-image" />
                    <div class="entrada-info">
                        <h1>{post.title}</h1>
                        <h1 set:html={post.content}></h1>
                    </div>
                </div>
    })}

